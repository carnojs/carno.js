{
  "name": "@carno.js/core",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "npx tsc -b -v --pretty false --force",
    "lint": "tsc --noEmit",
    "compile": "npm run build",
    "pretest": "docker-compose up -d",
    "test": "npm run test:postgres && npm run test:mysql",
    "test:postgres": "cross-env DB_DRIVER=postgres bun test",
    "test:mysql": "cross-env DB_DRIVER=mysql bun test",
    "posttest": "docker-compose down"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^24.9.1",
    "bun-types": "latest",
    "cross-env": "^10.1.0",
    "lerna": "^7.4.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carnojs/carno.js.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
